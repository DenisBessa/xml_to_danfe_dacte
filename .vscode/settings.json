{
	// Set default formatter for SQL and XML
	"Prettier-SQL.SQLFlavourOverride": "postgresql",
	"[sql]": {
		"editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
	},

	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml",
		"editor.formatOnType": false, // required
		"editor.formatOnPaste": true, // optional
		"editor.formatOnSave": true, // optional
		"editor.formatOnSaveMode": "file" // required to format on save
	},

	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},

	// Lint Settings
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnType": false, // required
	"editor.formatOnPaste": true, // optional
	"editor.formatOnSave": true, // optional
	"editor.formatOnSaveMode": "file", // required to format on save
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	}, // makes sure ESLint fixable issues are fixed on save
	"files.autoSave": "off", // optional but recommended

	"console-ninja.captureFunctions": true,
	"console-ninja.featureSet": "Pro",

	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.wordWrap": "off",

	"editor.accessibilitySupport": "off",
	"editor.cursorStyle": "line",
	"editor.guides.bracketPairs": false,
	"editor.guides.indentation": false,
	"editor.inlineSuggest.enabled": true,
	"editor.wordWrap": "off",

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,

	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.ignoreRebaseWarning": true,

	"githubPullRequests.remotes": [
		"origin",
		"upstream",
		"https://github.com/DenisBessa/korok.git"
	],

	"javascript.updateImportsOnFileMove.enabled": "always",

	"playwright.env": {},
	"playwright.reuseBrowser": true,

	"terminal.integrated.enableMultiLinePasteWarning": "auto",
	"terminal.integrated.env.linux": {
		"path": "/home/codespace/.console-ninja/.bin:/home/denis/.console-ninja/.bin:${env:PATH}"
	},
	"terminal.integrated.env.osx": {},
	"terminal.integrated.env.windows": {},
	"terminal.integrated.fontFamily": "MesloLGS NF",

	"todo-tree.tree.disableCompactFolders": false,
	"todo-tree.tree.showBadges": true,

	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.updateImportsOnFileMove.enabled": "always",

	"vscode-kubernetes.log-viewer.destination": "Webview",
	"vscode-kubernetes.log-viewer.follow": false,
	"vscode-kubernetes.log-viewer.since": -1,
	"vscode-kubernetes.log-viewer.tail": -1,
	"vscode-kubernetes.log-viewer.timestamp": false,
	"vscode-kubernetes.log-viewer.wrap": false,

	"workbench.colorCustomizations": {
		"editor.lineHighlightBackground": "#1073cf2d",
		"editor.lineHighlightBorder": "#9fced11f"
	},
	"workbench.startupEditor": "none",

	"biome.rename": true
}
